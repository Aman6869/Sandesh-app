<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="Sandesh">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sandesh">
        <activity android:name="com.andriod.Sandesh.MainActivity">
        </activity>
        <activity android:name="com.andriod.Sandesh.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.andriod.Sandesh.RegisterActivity" />
        <activity
            android:name="com.andriod.Sandesh.SettingsActivity"
            android:parentActivityName="com.andriod.Sandesh.MainActivity" />
        <activity android:name="com.andriod.Sandesh.GroupChatActivity" />
        <activity android:name="com.andriod.Sandesh.PhoneLoginActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.andriod.Sandesh.FindFriendsActivity"
            android:parentActivityName="com.andriod.Sandesh.MainActivity" />
        <activity android:name="com.andriod.Sandesh.ProfileActivity" />
        <activity android:name="com.andriod.Sandesh.ChatActivity"
            android:parentActivityName="com.andriod.Sandesh.MainActivity"
            >
            
        </activity>
    </application>

</manifest>